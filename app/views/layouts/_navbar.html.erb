<header>
  <nav>
    <% if logged_in? %>
    <a class="nav_logo" href="/"> 
      <div class="nav_img_box">
        <div class= "nav_img">
          <%= image_tag asset_path("title_icon_home.png") %>  
        </div>
      </div>
      <div class= "nav_title"><p class= "title">&nbsp;CreatorsHome&nbsp;</p></div>
    </a>
    </div>
    <% else %>
    <a class="nav_logo" href="/"> 
      <div class="nav_img_box">
        <div class= "nav_img">
          <%= image_tag asset_path("title_icon_home.png") %>  
        </div>
      </div>
      <div class= "nav_title"><p class= "title">&nbsp;CreatorsHome&nbsp;</p></div>
    </a>
    <% end %>
    
    <ul class= menu_right>
      <% if logged_in? %>
        <div class="plus_box">
          <li><%= link_to '', new_item_list_path , { class: 'plus' }%><span class="material-icons">edit</span></li>
          <li><%= link_to 'Add new', new_item_list_path , { class: 'plus_itemlist' }%></li>
        </div>
        <ul class="menu">
          <li>
            <a href=""><span class="material-icons">account_circle</span></a>
            <ul>
              <li>
                <%= link_to logout_path, { method: :delete, class: "logout" } do %>
                  <%= image_tag asset_path("logout.png") %>
                  <p>Logout</p>
                <% end %>
              </li>
            </ul>
          </li>
          <%= javascript_pack_tag 'navbar' %>
        </ul>

      <% else %>
        <li><%= link_to 'Sign Up', signup_path , { class: 'signup' }%></li>
        <li><%= link_to 'Login', login_path , { class: 'login' }%></li>
      <% end %>
    </ul>
  </nav>
  <%= render 'layouts/flash_messages' %>
</header>

