<header>
  <nav>
    <a class="nav_logo" href="/">
      <div class= "logo_icon"><%= image_tag('start_white.svg') %></div>
      <div class= "title"><span>BrainRestarter</span></div>
    </a>
    
    <%= search_form_for @search do |f| %>
      <%= f.search_field :list_name_cont, placeholder: "How are you feeling?" %>
      <button type="submit" id="search"><i class="fas fa-search searchicon"></i></button>
    <% end %>

    <ul>
      <% if logged_in? %>
        <li><%= link_to '+', new_item_list_path , { class: 'plus' }%></li>
        
        <li><%= link_to 'Logout', logout_path, { method: :delete, class: "logout" }%></li>
      <% else %>          
        <li><%= link_to 'Signup', signup_path , { class: 'signup' }%></li>
        <li><%= link_to 'Login', login_path , { class: 'login' }%></li>
      <% end %>
    </ul>
  </nav>
</header>

<%= render 'layouts/flash_messages' %>