
<%= render 'layouts/navbar' %>
<% if logged_in? %>
  <div class= toppage_login>
    <div class="face_box">
      <span class="material-icons">
      emoji_emotions
      </span>
      <p class =login_username>Welcome Back, <%= current_user.name %>!</p>
    </div>
    
    <% if logged_in? %>
      <%= search_form_for @search do |f| %>
        <%= f.search_field :list_name_cont, placeholder: "How are you feeling?" %>
        <button type="submit" id="search">
          <span class="material-icons">search</span>
        </button>
      <% end %>
    <% end %>
    <div class="tool_box">
      <span class="material-icons">
      devices_other
      </span>
      <p>Item & Use</p>
    </div>
    <div class="itemlist">
      <ul class="main">
        <% @item_lists.each do |item_list| %>
          <li>
            <div class="itemlist_topimg">
              <% if item_list.image? %>
                <%= link_to image_tag(item_list.image.url), item_list_path(item_list) %> 
              <% else %>
                <%= link_to image_tag("/assets/default.png"), item_list_path(item_list) %>
              <% end %>
            </div>
            <div class="itemlist_word">
              <div class="box_text">
                <div class="list_name">
                  <%= link_to item_list.list_name , item_list_path(item_list) %>
                </div>
                <% if item_list.list_description? %>
                  <div class="list_description">
                    <%= link_to item_list.list_description , item_list_path(item_list) %>
                  </div>
                <% else %>
                <% end %>
                <p>
                  <span><%= item_list.user.name %></span> が
                  <%= item_list.created_at.strftime("%Y-%m-%d %H:%M") %>
                </p>
              </div> 
            </div> 
            
          </li>
        <% end %>
      </ul> 
    </div> 
<% else %>
  <div class= toppage_logout>
    <div class= logout_image>
      <div class =logout_word>
        <h1 class= top><br>社会を変えるんじゃない<br>個人が<br>抜本的に変わるんだ</h1>
        <p class= middle>ライフハックに関する<br>アイテム共有コミュニティ<br>未来をよりよく生きる知恵を共有しよう<br></p>
        <div class="box_login">
          <div class="test_login">
            <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
              <%= f.hidden_field :email, value: "testuser@testuser.com" %>
              <%= f.hidden_field :password, value: "testuser" %>
              <%= image_tag("/assets/tool.png") %>
              <%= f.submit "Search The Future Item"%>
            <% end %>
          </div>
        </div>
      </div>
    </div> 
    <div class= checker>
      <h1 class= checker_word_top> 毎日の体調管理は &nbsp;Daily Planner&nbsp; にお任せ</h1>
      <p class= checker_word_middle>使用ツールを選んで簡単習慣化</p>
      <p class= checker_word_bottom>Daily Planner&nbsp;はあなたのデータを分析、トラッキングもしません</p>
      <%= link_to new_emotion_path , { class: 'checker_submit' } do %>
        <%= image_tag("/assets/checker.png") %>
        <p>Daily Planner</p>
      <% end %>
    </div>
    
<% end %>

