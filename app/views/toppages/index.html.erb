<%= render 'layouts/navbar' %>
<% if logged_in? %>
  <div class= toppage_login>
    <% if logged_in? %>
      <%= search_form_for @search do |f| %>
        <%= f.search_field :list_name_cont, placeholder: "お悩みはなんですか?" %>
        <button type="submit" id="search">
          <span class="material-icons">search</span>
        </button>
      <% end %>
    <% end %>

    <p class="article_index_category_name">人気のセルフケア</p>
    <div class="article_index">
      <ul class="article_index_wrap">
        <% @item_lists.each do |item_list| %>
          <li>
            <div class="article_topimg">
              <% if item_list.image? %>
                <%= link_to image_tag(item_list.image.url), item_list_path(item_list) %>
              <% else %>
                <%= link_to image_tag("/assets/default.png"), item_list_path(item_list) %>
              <% end %>
            </div>
            <div class="article_word_box">
              <div class="article_word_box_left">
              </div>
              <div class="article_word_box_right">
                <div class="article_title">
                  <div class="title_name">
                    <%= link_to item_list.list_name , item_list_path(item_list) %>
                  </div>    
                </div> 
                <div class="artcle_user_info">
                  <div class="user_box">
                    <div class="user_box_top_name">
                        <div class="user_name"><span><%= item_list.user.name %></span></div>
                        <div class="user_job_name">WEB DESIGNER</div>
                    </div> 
                  </div>
                </div>
              </div>
            </div>   
          </li>
        <% end %>
      </ul> 
    </div>
  </div>
