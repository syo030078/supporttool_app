
<%= render 'layouts/navbar' %>
<% if logged_in? %>
  <div class= toppage_login>
    <div class="face_box">
      <span class="material-icons">
      emoji_emotions
      </span>
      <p class =login_username>Welcome Back, <%= current_user.name %>!</p>
    </div>
    
    <% if logged_in? %>
      <%= search_form_for @search do |f| %>
        <%= f.search_field :list_name_cont, placeholder: "What weapon do you need?" %>
        <button type="submit" id="search">
          <span class="material-icons">search</span>
        </button>
      <% end %>
    <% end %>
    <div class="tool_box">
      <span class="material-icons">
      devices_other
      </span>
      <p>Weapon</p>
    </div>
    <div class="itemlist">
      <ul class="main">
        <% @item_lists.each do |item_list| %>
          <li>
            <div class="itemlist_topimg">
              <div class="list_item_type_box">
                <% if item_list.list_item_type == "Sord" then %>
                <div class="list_type_sord_box">
                  <p class= list_item_type_name>type: </p>
                  <%= image_tag("/assets/sord.png") %>
                </div>
                <% elsif item_list.list_item_type == "Shield" then%>
                <div class="list_type_shield_box">
                  <p class= list_item_type_name>type: </p>
                  <%= image_tag("/assets/shield.png") %>
                </div>
                <% end %>
              </div>
              <% if item_list.image? %>
                <%= link_to image_tag(item_list.image.url), item_list_path(item_list) %>
              <% else %>
                <%= link_to image_tag("/assets/default.png"), item_list_path(item_list) %>
              <% end %>
            </div>
            <div class="itemlist_word">
              <div class="box_text">
                <div class="list_name">
                  <%= link_to item_list.list_name , item_list_path(item_list) %>
                </div>
                <p class= price>$ 000.0〜</p>
                <p>
                  <span><%= item_list.user.name %></span> が
                  <%= item_list.created_at.strftime("%m/%d/%Y ") %>
                </p>    
              </div> 
            </div>   
          </li>
        <% end %>
      </ul> 
    </div> 
<% else %>
  <div class= toppage_logout>
    <div class= logout_image>
      <div class =logout_word>
        <h1 class= top><br>未来へ生き抜く<br>現代の<br><span class= top_word_bottom>「剣」と「盾」</span></h1>
        <p class= middle>ガジェット共有コミュニティー<br>社会を変えるんじゃない<br>個人から抜本的に変わるんだ<br></p>
        <div class="box_login">
          <div class="test_login">
            <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
              <%= f.hidden_field :email, value: "testuser@testuser.com" %>
              <%= f.hidden_field :password, value: "testuser" %>
              <%= image_tag("/assets/login_imag_hand.png") %>
              <%= f.submit "Search The Future Weapon"%>
            <% end %>
          </div>
        </div>
      </div>
    </div>  
    <div class= checker>
      <h1 class= checker_word_top> 体調管理は &nbsp;Performance Tracker&nbsp; にお任せ</h1>
      <p class= checker_word_middle></p>
      <p class= checker_word_middle>簡単チェックで、あなたのパフォーマンスレベルを計測します</p>
      <p class= checker_word_bottom>＊ Performance Tracker&nbsp;のユーザーデータは解析のみに利用し、当社で保持することはありません。</p>
      <%= link_to new_emotion_path , { class: 'checker_submit' } do %>
        <%= image_tag("/assets/energy_cheacker_img.png") %>
        <p>Performance Tracker</p>
      <% end %>
    </div>
    
<% end %>

