

<% if logged_in? %>
  <div class= toppage>  
    <div class= user-name>
      <p class= welcome>Welcome back: </p><p class= name><%= current_user.name %></p>
    </div>
      <ul>
        <% @item_lists.each do |item_list| %>
          <li>
            <div class="box_text">
              <%= link_to item_list.list_name , item_list_path(item_list) %>
              <p class= item_list_products>products</p>
            </div>  
            <% if item_list.image? %>
              <%= image_tag item_list.image.url %> 
            <% else %>
              <%= image_tag "/assets/default.png" %>
            <% end %>
          </li>
        <% end %>
      </ul>
  </div>  
  
<% else %>
  <div class= logout>
    <div class= logout_image>
      <%= image_tag "/assets/ring.jpg" %>
      <div class =logout_word>
        <h1>感情に紐づいたアイテムで、<br>マインドマネージメント。</h1>
        <p>あなたのアイテムの使い方<br>そこで得られた体験を共有すること価値があるのです</p>
      </div>
    </div>  
  </div>

  <div class= toppage>    
    <ul>
        <% @item_lists.each do |item_list| %>
          <li>
            <div class="box_text">
              <%= link_to item_list.list_name , item_list_path(item_list) %>
              <p class= item_list_products>products</p>
            </div>  
            <% if item_list.image? %>
              <%= image_tag item_list.image.url %> 
            <% else %>
              <%= image_tag "/assets/default.png" %>
            <% end %>
          </li>
        <% end %>
      </ul>
  </div>  
<% end %>


